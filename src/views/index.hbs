            <!-- Modal registro plantación -->
            <div class="modal fade" id="modalRegPlt" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Plantación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form id="plt">
                      <div class="form-group">
                        <label for="identplt">Identificador</label>
                        <input type="text" class="form-control" id="identplt" name="id">
                      </div>
                      <div class="form-group">
                        <label for="descplt">Descripción</label>
                        <textarea class="form-control" id="descplt" rows="3" name="descripcion"></textarea>
                      </div>
                      <div class="group">
                        <label for="stdplt">Estado</label>
                        <select class="custom-select" id="stdplt" name="estado">
                          <option>SIEMBRA</option>
                          <option>EMERGENCIA</option>
                          <option>DESARROLLO VEGETATIVO</option>
                          <option>FLORACION</option>
                          <option>MADURACION</option>
                          <option>COSECHA</option>
                        </select>
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btnplt">Registrar</button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Modal registro seguimiento -->
            <div class="modal fade" id="modalSgm" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Seguimiento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form id="sgm">
                      <div class="form-group">
                        <label for="identsgm">Identificador plantación</label>
                        <input type="text" class="form-control" id="identsgm" name="id">
                      </div>
                      <div class="form-group">
                        <label for="fechasgm">Fecha</label>
                        <input type="date" class="form-control" id="fechasgm" name="fecha">
                      </div>
                      <div class="form-group">
                        <label for="descsgm">Descripción</label>
                        <textarea class="form-control" id="descsgm" rows="3" name="descripcion"></textarea>
                      </div>
                      <div class="form-group">
                        <label for='imgsgm'>Imagen</label> 
                        <input type='file' id='imgsgm' name='img' class='form-control-file'>
                      </div>
                      <div class="form-group">
                        <label for="stdsgm">Estado</label>
                        <select class="custom-select" id="stdsgm" name="estado">
                          <option>SIEMBRA</option>
                          <option>EMERGENCIA</option>
                          <option>DESARROLLO VEGETATIVO</option>
                          <option>FLORACION</option>
                          <option>MADURACION</option>
                          <option>COSECHA</option>
                        </select>
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btnsgm">Registrar</button>
                  </div>
                </div>
              </div>
            </div>

