          <div class="col-12 col-md-8 p-2" id="map"></div>
          <div class="col-12 col-md-4 p-2 overflow-auto" id="describe">

            <nav class="navbar navbar-light bg-light">
              <a class="navbar-brand">Registo</a>
                <!-- Button trigger modal registro plantación-->
                <button type="button" class="btn btn-outline-secondary btn-block" data-toggle="modal" data-target="#modalRegPlt">
                  Plantación
                </button>
                <!-- Button trigger modal registro plantación-->
                <button type="button" class="btn btn-outline-secondary btn-block" data-toggle="modal" data-target="#modalSgm">
